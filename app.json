{
  "expo": {
    "name": "PingMe",
    "slug": "pingme",
    "version": "1.0.0",
    "web": {
      "favicon": "./assets/intro-1.png"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "orientation": "portrait",
    "icon": "./assets/intro-1.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/intro-1.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hailstonelab.pingme",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/intro-1.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.hailstonelab.pingme"
    },
    "extra": {
      "eas": {
        "projectId": "27fd7c79-94a6-48d9-967b-dc7cafa7a950"
      }
    }
  }
}
